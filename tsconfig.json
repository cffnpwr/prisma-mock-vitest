{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "lib/",
    "lib": [
      "es2020",
      "dom"
    ],
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "alwaysStrict": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "__tests__/**/*.test.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}